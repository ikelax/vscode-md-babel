{
  "name": "vscode-md-babel",
  "publisher": "md-babel",
  "displayName": "Markdown Babel",
  "description": "Execute code blocks in Markdown files using md-babel",
  "version": "0.2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/md-babel/vscode-md-babel"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Notebooks",
    "Data Science",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "debugging",
    "literate programming"
  ],
  "activationEvents": [
    "onLanguage:markdonw"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "MD Babel",
      "properties": {
        "mdBabel.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to the md-babel executable"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-md-babel.executeBlockAtPoint",
        "title": "Execute Markdown Block at Point"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-md-babel.executeBlockAtPoint",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package",
    "prettier:format": "npx prettier . --write",
    "prettier:check": "npx prettier . --check",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "3.5.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
